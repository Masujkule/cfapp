

  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build],remote: true) do |f| %>
    
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class:'form-control', placeholder: 'Enter your comment here' %>
    </p>
    
    <p>
      <div class="rating"></div>
    </p>  
<% if signed_in? %>    
    <p>
      <%= f.submit "Submit", class:"btn-submit" %>
    </p>
  
  <% end %>
<% end %>